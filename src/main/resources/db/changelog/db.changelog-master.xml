<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="createUsersTable" author="skillbox">
        <createTable tableName="users">
            <column name="user_id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="createRelationshipTable" author="skillbox">
        <createTable tableName="relationship">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="related_user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="previous_status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="status_change_id" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="createOperationsTable" author="skillbox">
        <createTable tableName="operations">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="related_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="operation_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>